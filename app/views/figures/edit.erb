<h2>Edit Historical Figure</h2>

<form method="post" action="/figures/<%=@figure.id%>">
<input id="hidden" type="hidden" name="_method" value="patch">
Name:<input type="text" name="figure[name]" id="figure_name">
<br>
<h3>Titles:</h3>
  <% @titles.each do |title| %>
    <input type="checkbox" name="figure[title_ids][]" id="title_<%= title.id %>" value="<%= title.id %>"><%= title.name %>
  <br>
  <% end %>
  <h3> Create New Title</h3>
  <input type="text" name="title[name]" id="new_title">
<br>
<h3>Landmark details:</h3>
<br>
 <% @landmarks.each do |landmark| %>
    <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%= landmark.id %>" value="<%= landmark.id %>"><%= landmark.name %>
  <br>
  <% end %>
  <h3> Create New Landmark</h3>
  Name:<input type="text" name="landmark[name]" id="new_landmark">
  Year:<input type="text" name="landmark[year_completed]">
  
  <input type="submit" value="Edit Figure">
</form>

<a class="button" href="/landmarks">Landmarks</a>
<a class="button" href="/">Home</a>
